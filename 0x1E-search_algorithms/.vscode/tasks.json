{
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: gcc build active file",
                        "command": "/usr/bin/gcc",
                        "args": [
                                "-fdiagnostics-color=always",
                                "-g",
                                "-Wall",
                                "-Wextra",
                                "-Werror",
                                "-pedantic",
                                "-std=gnu89",
                                "${workspaceFolder}/*.c",
                                "-o",
                                "run"
                        ],
                        "options": {
                                "cwd": "${fileDirname}"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "detail": "Task generated by Debugger."
                }
        ],
        "version": "2.0.0"
}